#!/bin/bash

# Check if the file exists
if [ ! -e hello ]; then
    echo "Error: File 'hello' does not exist."
    exit 1
fi

# Get the current owner of the file
current_owner="$(stat -c '%U' hello)"

# Check if the current owner is guillaume
if [ "$current_owner" != "guillaume" ]; then
    echo "Error: Current owner of 'hello' is not 'guillaume'."
    exit 1
fi
chown betty hello
echo "Successfully changed owner of 'hello' to 'betty'."
